{
    "lsp": {
        "cpp": {
            "path": "clangd",
            "args": [
                "--offset-encoding=utf-8"
            ]
        },
        "c": {
            "path": "clangd",
            "args": [
                "--offset-encoding=utf-8"
            ]
        },
        "zig": {
            "path": "zls"
        },
        "rust": {
            "path": "rust-analyzer",
            "section": "rust-analyzer"
        },
        "csharp": {
            "path": "OmniSharp"
        },
        "nim": {
            "path": "nimlangserver",
            "args": [
                "--stdio"
            ]
        }
    },

    "languages": {
        "query": {
            "treesitter": "tree-sitter-grammars/tree-sitter-query",
            "tabWidth": 2,
            "indent": "spaces",
            "indentAfter": [
                "(",
                "{",
                "["
            ],
            "lineComment": ";"
        },
        "nim": {
            "treesitter": "alaviss/tree-sitter-nim",
            "tabWidth": 2,
            "indent": "spaces",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "[",
                "enum",
                "object"
            ],
            "lineComment": "#"
        },
        "python": {
            "treesitter": "tree-sitter/tree-sitter-python",
            "tabWidth": 2,
            "indent": "spaces",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "#"
        },
        "javascript": {
            "treesitter": "tree-sitter/tree-sitter-javascript",
            "tabWidth": 4,
            "indent": "spaces",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "//",
            "blockComment": [
                "/*",
                "*/"
            ],
            "ignoreContextLinePrefix": "{"
        },
        "typescript": {
            "treesitter": "tree-sitter/tree-sitter-typescript",
            "tabWidth": 4,
            "indent": "tab",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "//",
            "blockComment": [
                "/*",
                "*/"
            ]
        },
        "rust": {
            "treesitter": "tree-sitter/tree-sitter-rust",
            "tabWidth": 4,
            "indent": "spaces",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "//",
            "blockComment": [
                "/*",
                "*/"
            ]
        },
        "c": {
            "treesitter": "tree-sitter/tree-sitter-c",
            "tabWidth": 4,
            "indent": "spaces",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "//",
            "blockComment": [
                "/*",
                "*/"
            ]
        },
        "cpp": {
            "treesitter": "tree-sitter/tree-sitter-cpp",
            "tabWidth": 4,
            "indent": "spaces",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "//",
            "blockComment": [
                "/*",
                "*/"
            ]
        },
        "java": {
            "treesitter": "tree-sitter/tree-sitter-java",
            "tabWidth": 4,
            "indent": "tab",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "//",
            "blockComment": [
                "/*",
                "*/"
            ]
        },
        "zig": {
            "treesitter": "maxxnino/tree-sitter-zig",
            "tabWidth": 4,
            "indent": "tab",
            "indentAfter": [
                ":",
                "=",
                "(",
                "{",
                "["
            ],
            "lineComment": "//"
        },
        "json": {
            "treesitter": "maxxnino/tree-sitter-json",
            "tabWidth": 4,
            "indent": "tab",
            "indentAfter": [
                ":",
                "{",
                "["
            ],
            "lineComment": "//"
        },
        "markdown": {
            "treesitter": "tree-sitter-grammars/tree-sitter-markdown",
            "tabWidth": 2,
            "indent": "spaces",
            "blockComment": [ "<!--", "-->" ]
        }
    },

    "snippets": {
        "nim": {
            "procedure": {
                "scope": "nim",
                "prefix": "proc",
                "body": [
                    "proc ${1:name}($2): ${3:returnType} = ${0:discard}"
                ]
            }
        }
    },

    "snippets": {
        "nim": {
            "procedure": {
                "scope": "nim",
                "prefix": "proc",
                "body": [
                    "proc ${1:name}($2): ${3:returnType} = ${0:discard}"
                ]
            }
        }
    },

    "editor": {
        "text": {
            "auto-start-language-server": true,
            "triple-click-command": "extend-select-move",
            "triple-click-command-args": [
                "line",
                true
            ],
            "whitespace": {
                "char": "Â·"
            },
            "highlight-treesitter-errors": false
        },
        "restore-open-workspaces": true,
        "restore-open-editors": true,
        "frame-time-smoothing": 0.8,
        "maxViews": 2
    },

    "debugger": {
        "type": {
            "lldb-dap": {
                "connection": "stdio",
                "path": "lldb-dap",
                "args": []
            },
            "lldb-dap-tcp-launch": {
                "connection": "tcp",
                "path": "lldb-dap"
            },
            "lldb": {
                "connection": "tcp",
                "path": "lldb-dap"
            }
        }
    },

    "ui": {
        "background": {
            "transparent": false
        }
    },

    "keybindings": {
        "preset": "vim"
    },

    "wasm-plugin-post-load-commands": [
        "load-theme \"tokyo-night-color-theme\"",
        "load-configured-keybindings"
    ]
}