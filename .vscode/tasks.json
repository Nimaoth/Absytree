{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "build_and_run",
            "type": "shell",
            "command": "nim c -d:mingw --mm:refc --tlsEmulation:off -d:release --stackTrace:on --lineTrace:on --lineDir:on -o:nev.exe src/desktop_main.nim && ./nev.exe",
            "problemMatcher": [
                "$nim"
            ]
        },
        {
            "label": "build_profiling",
            "type": "shell",
            "command": "nim c -d:mingw --mm:refc --tlsEmulation:off -d:release --profiler:on --stackTrace:on -o:nev.exe src/desktop_main.nim",
            "problemMatcher": [
                "$nim"
            ]
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "nim c -g --debugger:native -d:debug --stackTrace:on --lineTrace:on --lineDir:on --debuginfo -o:nev.exe src/desktop_main.nim",
            "problemMatcher": [
                "$nim"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./nev.exe",
            "problemMatcher": [
                "$nim"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "nim c -d:mingw --mm:refc --tlsEmulation:off -d:release --stackTrace:on --lineTrace:on --lineDir:on -o:nev.exe src/desktop_main.nim",
            "problemMatcher": [
                "$nim"
            ]
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "nim c -d:mingw --mm:refc --tlsEmulation:off -d:release --app:gui -o:nev.exe src/desktop_main.nim",
            "problemMatcher": [
                "$nim"
            ]
        },
        {
            "label": "test_current_file",
            "type": "shell",
            "command": "nim c -r ${file} \"*\"",
            "problemMatcher": [
                "$nim"
            ]
        }
    ]
}