{
    "$schema": "../config/settings.schema.json",
    "+lsp": {

        "+cpp": {
            "args": [
                "--offset-encoding=utf-8",
                "--background-index",
                "--limit-results=100",
                "--limit-references=2000",
                "--clang-tidy"
            ]
        },

        "+c": {
            "args": [
                "--offset-encoding=utf-8",
                "--background-index",
                "--limit-results=100",
                "--limit-references=2000"
            ]
        },

        "+nim": {
            "settings": {
                "project": [],
                "xprojectMapping": [],
                "test-project": "",
                "buildOnSave": false,
                "buildCommand": "c",
                "runOutputDirectory": "",
                "lintOnSave": true,
                "enableNimsuggest": false,
                "useNimsuggestCheck": false,
                "logNimsuggest": true,
                "licenseString": "",
                "nimsuggestRestartTimeout": 10,
                "nimprettyIndent": 0,
                "nimprettyMaxLineLen": 80,
                "inlayHints": {
                    "typeHints": {
                        "enable": true
                    },
                    "exceptionHints": {
                        "enable": true,
                        "hintStringLeft": "ðŸ””",
                        "hintStringRight": ""
                    }
                }
            }
        },

        "+rust": {
            "rust-analyzer": {
                "linkedProjects": ["temp/rust_test/Cargo.toml"]
            }
        }
    },

    "+snippets": {
        "+nim": {
            "Print to console": {
                "scope": "nim",
                "prefix": "log",
                "body": [
                    "log lvl${1:Info}, &\"[${TM_FILENAME/(.*)\\..*$/${1:/capitalize}/}] $2\""
                ]
            }
        }
    },

    "+debugger": {
        "+type": {
            "lldb-dap": {
                "connection": "stdio",
                "path": "/bin/lldb-dap-18",
                "args": []
            },
            "lldb-dap-tcp-launch": {
                "connection": "tcp",
                "path": "D:/llvm/bin/lldb-dap.exe"
            },
            "lldb": {
                "connection": "tcp",
                "path": "C:/llvm/build_release/RelWithDebInfo/bin/lldb-dap.exe"
            },
            "lldb-dap-tcp": {
                "connection": "tcp",
                "port": 5678
            },
            "lldb-dap-debug-tcp-launch": {
                "connection": "tcp",
                "path": "C:/llvm/build_lldb/Debug/bin/lldb-dap.exe"
            },
            "lldb-debug": {
                "connection": "tcp",
                "path": "C:/llvm/build_lldb/Debug/bin/lldb-dap.exe"
            },
            "lldb-port": {
                "connection": "tcp",
                "port": 5678
            },
            "lldb-dap2": {}
        },
        "+configuration": {
            "absytree": {
                "type": "lldb-dap",
                "request": "launch",
                "program": "astd",
                "args": ["-s:linux.absytree-session"]
            }
        }
    },

    "x+startup-commands": [
        ".lsp-log-server-debug true",
        ".lsp-log-verbose true"
    ],

    "+wasm-plugin-post-load-commands": [
        "load-vscode-snippets \".vscode/nim-snippets.code-snippets\" \"nim\"",
        "load-vscode-debugger-config \".vscode/launch.json\""
    ]
}